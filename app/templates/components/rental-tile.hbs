<li>
  {{#link-to 'rental' rental.id}}{{rental.owner}}'s {{rental.type}} in {{rental.city}} {{/link-to}}
  {{#if isImageShowing}}
    <p><img src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}} class="rental-img"></p>
  {{else}}
    <button {{action 'imageShow'}}class="btn btn-info">Image</button>
  {{/if}}
</li>
